/* components/modal/modal.wxss */
.mask{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 100;
  background: rgba(0, 0, 0, 0.3);
  transition: opacity .1s ease-in;
}
.modal-content{
	position: fixed;
  width: 80%;
	left: 50%;
  top: 50%;
	transform: translate(-50%, -50%);
  background-color: #fff;
  border-radius: 10rpx;
	z-index: 101;
}
.main-content{
  height: 100%;
  overflow-y: hidden; 
}
.slot{
	width: 100%;
	height: 100%;
	background: red
}
